{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "lib": ["ESNext"],
        "rootDir": "src",
        "outDir": "dist",
        "isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    }
}