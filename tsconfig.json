{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        // "forceConsistentCasingInFileNames": false,
        "moduleResolution": "node",
        "rootDir": "src",
        "checkJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "lib": ["es2015"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
} 